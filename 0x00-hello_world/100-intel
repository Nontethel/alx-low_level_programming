#!/bin/bash

# Check if the C file is provided as an argument
if [ -z "$CFILE" ]; then
    echo "Error: CFILE variable is not set."
    exit 1
fi

# Check if the C file exists
if [ ! -e "$CFILE" ]; then
    echo "Error: C file '$CFILE' does not exist."
    exit 1
fi

# Extract the base name of the C file without the extension
BASENAME=$(basename -s .c "$CFILE")

# Generate the assembly code and save it to a .s file
gcc -S -masm=intel "$CFILE" -o "${BASENAME}.s"

# Check if the assembly file was generated successfully
if [ $? -eq 0 ]; then
    echo "Assembly code generated and saved as ${BASENAME}.s"
else
    echo "Error: Failed to generate assembly code."
    exit 1
fi
